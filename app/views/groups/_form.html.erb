<section class="mb-4">
  <h2><%= heading %></h2>
  <div class="form-body">
    <%= form_with model: group, local: true do |f| %>
      <div class="form-group">
        <%= f.label :group_name, class: "font-weight-bold" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :introduction, class: "font-weight-bold" %>
        <%= f.text_area :introduction, class: "form-control", rows: "3" %>
      </div>

      <div class="form-group">
        <%= f.label :group_image, class: "font-weight-bold" %>
        <%= f.file_field :group_image, class: "form-control-file", accept: "image/*" %>
      </div>

      <% case action %>
      <% when :update %>
        <div class="form-group">
          <%= f.button :type => "submit", class: "btn btn-primary" do %>
            Update Group
          <% end %>
        </div>      <% when :create %>
        <div class="form-group">
          <%= f.submit "Create Group", class: "btn btn-success" %>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= yield %>
</section>